{
  "name": "personal-api",
  "description": "An API to be used for my personal site",
  "scripts": {
    "start": "grial start",
    "deploy": "now --token $TOKEN",
    "postdeploy": "npm run alias",
    "alias": "now alias --token $TOKEN",
    "postalias": "npm run clean",
    "clean": "now rm personal-api --safe --yes --token $TOKEN"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sergiodxa/personal-api.git"
  },
  "keywords": [
    "grial",
    "graphql",
    "personal-api"
  ],
  "author": {
    "name": "Sergio Daniel Xalambr√≠",
    "email": "sergiodxa@gmail.com",
    "url": "https://sergio.now.sh/"
  },
  "license": "MIT",
  "private": true,
  "bugs": {
    "url": "https://github.com/sergiodxa/personal-api/issues"
  },
  "homepage": "https://sergio.now.sh",
  "now": {
    "alias": "sergio-api.now.sh",
    "env": {
      "NODE_ENV": "production",
      "GITHUB_TOKEN": "@gh_personal_site_token",
      "API_TOKEN": "@personal_api_token",
      "PUBLIC_PORT": "443",
      "PUBLIC_HOST": "sergio.now.sh",
      "SSL_ENABLED": true
    }
  },
  "dependencies": {
    "@grial/cli": "^1.3.0",
    "@grial/connector-fs": "^1.0.1",
    "@grial/server": "^1.5.1",
    "lodash": "^4.17.4",
    "node-fetch": "^1.7.3"
  },
  "devDependencies": {
    "now": "^8.5.4"
  }
}
